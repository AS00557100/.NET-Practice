@model IEnumerable<SimpleMVC.Models.Employee>
@{

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Employee List</title>
</head>
<body>

    @Html.ActionLink("Add New", "Create")

    <table border="1">
        <tr>
            <th>Id</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>More</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@Html.ActionLink("more", "Detail",new {id = item.Id})</td>
            </tr>
        }
    </table>
</body>
</html>
